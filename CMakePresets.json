{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 19,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "windows-mingw",
            "displayName": "Windows (MinGW-w64, static)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/toolchain-windows.cmake",
                "STATIC_BUILD": "ON"
            }
        },
        {
            "name": "linux",
            "displayName": "Linux (Ninja, Release)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "windows-mingw",
            "configurePreset": "windows-mingw"
        },
        {
            "name": "linux",
            "configurePreset": "linux"
        }
    ],
    "testPresets": [
        {
            "name": "windows-mingw",
            "configurePreset": "windows-mingw"
        },
        {
            "name": "linux",
            "configurePreset": "linux"
        }
    ]
}
